<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Weelg"
    android:background="@drawable/back2"
    android:orientation="vertical">


        <ImageView
            android:id="@+id/menu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_menu_black_24dp"
            android:onClick="ImageView_msg" />

    <ImageView
        android:id="@+id/about"
        android:layout_width="84dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="0dp"
        android:padding="10dp"
        android:src="@drawable/ic_info_black_24dp" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="406dp"
        android:layout_height="140dp"
        android:layout_above="@+id/pointer"
        android:layout_below="@+id/menu"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="-13dp"
        android:fontFamily="@font/audiowide"
        android:text=""
        android:textAlignment="center"
        android:textColor="#D464E3"
        android:textSize="32dp"
        tools:layout_editor_absoluteX="180dp"
        tools:layout_editor_absoluteY="37dp" />

    <ImageView
        android:id="@+id/pointer"
        android:layout_width="26dp"
        android:layout_height="17dp"


        android:layout_above="@+id/weel"
        android:layout_marginStart="200dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="41dp"

        android:layout_marginEnd="184dp"
        android:layout_marginRight="184dp"
        android:layout_marginBottom="-32dp"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/tri2"
        tools:layout_editor_absoluteX="-23dp"
        tools:layout_editor_absoluteY="140dp" />

    <ImageView
        android:id="@+id/weel"
        android:layout_width="436dp"
        android:layout_height="355dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="151dp"
        app:srcCompat="@drawable/weel2"
        tools:layout_editor_absoluteX="-23dp"
        tools:layout_editor_absoluteY="140dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="298dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="68dp"
        android:layout_marginLeft="68dp"
        android:layout_marginEnd="33dp"
        android:layout_marginRight="33dp"
        android:layout_marginBottom="56dp"
        android:background="@drawable/custom_buttom"
        android:fontFamily="@font/audiowide"
        android:text="Spin"
        android:textAllCaps="false"
        android:textSize="32dp"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="552dp" />

</RelativeLayout>